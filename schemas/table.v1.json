{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Table (v1)",
  "type": "object",
  "required": ["source", "chapter", "section", "schema_version", "fields", "rows"],
  "properties": {
    "source": { "type": "string" },
    "chapter": { "type": "string" },
    "section": { "type": "string" },
    "schema_version": { "type": "string", "enum": ["1.0"] },
    "fields": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "rows": {
      "type": "array",
      "items": { "type": "object" }
    }
  },
  "additionalProperties": true
}
