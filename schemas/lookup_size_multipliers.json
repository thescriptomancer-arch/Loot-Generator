{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Armor/Shield Size Multipliers",
  "type": "object",
  "required": ["table", "rows"],
  "properties": {
    "table": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "source": {
          "type": "object",
          "properties": {
            "book": { "type": "string" },
            "page": { "type": ["integer","null"] }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["size"],
        "properties": {
          "size": { "type": "string" },
          "humanoid_cost_mult": { "type": ["number","null"] },
          "humanoid_weight_mult": { "type": ["number","null"] },
          "nonhumanoid_cost_mult": { "type": ["number","null"] },
          "nonhumanoid_weight_mult": { "type": ["number","null"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
