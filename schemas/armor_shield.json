{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "armor_shield.schema.json",
  "title": "PHB Armor or Shield",
  "type": "object",
  "required": [
    "name",
    "kind",
    "category",
    "ac_bonus",
    "max_dex_bonus",
    "armor_check_penalty",
    "arcane_spell_failure",
    "speed",
    "weight",
    "cost",
    "source"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "kind": {
      "type": "string",
      "enum": [
        "armor",
        "shield"
      ]
    },
    "category": {
      "type": "string",
      "description": "Armor: light/medium/heavy; Shields: buckler/light/heavy/tower",
      "enum": [
        "light",
        "medium",
        "heavy",
        "buckler",
        "light shield",
        "heavy shield",
        "tower shield"
      ]
    },
    "ac_bonus": {
      "type": "integer"
    },
    "max_dex_bonus": {
      "type": [
        "integer",
        "string"
      ],
      "description": "Use '\u2014' if none."
    },
    "armor_check_penalty": {
      "type": "integer"
    },
    "arcane_spell_failure": {
      "type": "integer",
      "description": "Percentage"
    },
    "speed": {
      "type": "object",
      "required": [
        "base30",
        "base20"
      ],
      "properties": {
        "base30": {
          "type": "integer",
          "description": "Speed for creatures with base 30 ft."
        },
        "base20": {
          "type": "integer",
          "description": "Speed for creatures with base 20 ft."
        }
      },
      "additionalProperties": false
    },
    "weight": {
      "type": "number"
    },
    "cost": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "book",
        "page"
      ],
      "properties": {
        "book": {
          "type": "string"
        },
        "page": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}