{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Equipment Item",
  "type": "object",
  "required": ["id", "name", "category"],
  "properties": {
    "id": { "type": "string", "description": "stable slug id" },
    "name": { "type": "string" },
    "category": { "type": "string", "description": "e.g., armor, shield, weapon, gear, tool, substance" },
    "subcategory": { "type": "string" },

    "cost_gp": { "type": ["number","null"] },
    "weight_lb": { "type": ["number","null"] },

    "armor_bonus": { "type": ["integer","null"] },
    "max_dex_bonus": { "type": ["integer","null"] },
    "armor_check_penalty": { "type": ["integer","null"] },
    "arcane_spell_failure": { "type": ["integer","null"] },
    "speed_30": { "type": ["integer","null"] },
    "speed_20": { "type": ["integer","null"] },

    "damage_s": { "type": ["string","null"] },
    "damage_m": { "type": ["string","null"] },
    "critical": { "type": ["string","null"] },
    "range_increment_ft": { "type": ["integer","null"] },
    "type": { "type": ["string","null"], "description": "damage type or weapon type" },

    "notes": { "type": ["string","null"] },

    "source": {
      "type": "object",
      "properties": {
        "book": { "type": "string" },
        "table": { "type": ["string","null"] },
        "page": { "type": ["integer","null"] }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
